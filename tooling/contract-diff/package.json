{
  "name": "@polaris/contract-diff",
  "version": "1.0.0",
  "description": "Contract diff tooling for OpenAPI and event schema governance",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "run": "node lib/run.js"
  },
  "dependencies": {
    "@types/jest": "^30.0.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "ts-jest": "^29.4.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.0.0",
    "jest": "^29.7.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests",
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  }
}
