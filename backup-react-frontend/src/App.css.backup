    --bg-primary: #1e293b;
    --bg-secondary: #334155;
    --bg-tertiary: #475569;
    --text-primary: #f1f5f9;
    --text-secondary: #cbd5e1;
    --text-tertiary: #94a3b8;
    --border-color: #475569;
    --accent-blue: #60a5fa;
    --accent-purple: #a78bfa;
    --accent-green: #34d399;
  }
}

.dark {
  /* Base backgrounds */
  --tw-bg-opacity: 1;
  background-color: rgb(30 41 59 / var(--tw-bg-opacity));
  color: rgb(241 245 249 / var(--tw-text-opacity));
}

.dark .bg-white {
  --tw-bg-opacity: 1;
  background-color: rgb(51 65 85 / var(--tw-bg-opacity));
}

.dark .bg-slate-50 {
  --tw-bg-opacity: 1;
  background-color: rgb(30 41 59 / var(--tw-bg-opacity));
}

.dark .bg-slate-100 {
  --tw-bg-opacity: 1;
  background-color: rgb(71 85 105 / var(--tw-bg-opacity));
}

.dark .text-slate-900 {
  --tw-text-opacity: 1;
  color: rgb(241 245 249 / var(--tw-text-opacity));
}

.dark .text-slate-700 {
  --tw-text-opacity: 1;
  color: rgb(203 213 225 / var(--tw-text-opacity));
}

.dark .text-slate-600 {
  --tw-text-opacity: 1;
  color: rgb(148 163 184 / var(--tw-text-opacity));
}

.dark .border-slate-200 {
  --tw-border-opacity: 1;
  border-color: rgb(71 85 105 / var(--tw-border-opacity));
}

.dark .border-slate-300 {
  --tw-border-opacity: 1;
  border-color: rgb(100 116 139 / var(--tw-border-opacity));
}

/* Dark mode hover states */
.dark .hover\:bg-slate-50:hover {
  --tw-bg-opacity: 1;
  background-color: rgb(71 85 105 / var(--tw-bg-opacity));
}

.dark .hover\:bg-slate-100:hover {
  --tw-bg-opacity: 1;
  background-color: rgb(100 116 139 / var(--tw-bg-opacity));
}

/* Dark mode gradient overrides */
.dark .gradient-override {
  background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
}

/* Dark mode card shadows */
.dark .shadow-sm {
  --tw-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.2);
  --tw-shadow-colored: 0 1px 2px 0 var(--tw-shadow-color);
  box-shadow: var(--tw-ring-offset-shadow, 0 0 #0000), var(--tw-ring-shadow, 0 0 #0000), var(--tw-shadow);
}

.dark .shadow-lg {
  --tw-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.3), 0 4px 6px -2px rgb(0 0 0 / 0.2);
  --tw-shadow-colored: 0 10px 15px -3px var(--tw-shadow-color), 0 4px 6px -2px var(--tw-shadow-color);
  box-shadow: var(--tw-ring-offset-shadow, 0 0 #0000), var(--tw-ring-shadow, 0 0 #0000), var(--tw-shadow);
}

/* Mobile-First Responsive Design Enhancements */
@media (max-width: 768px) {
  /* Mobile Dashboard Grid Optimizations */
  .dashboard-grid {
    @apply grid-cols-1 gap-4;
  }
  
  /* Mobile Navigation */
  .nav-tabs {
    @apply overflow-x-auto whitespace-nowrap;
  }
  
  .nav-tabs button {
    @apply flex-shrink-0;
  }
  
  /* Mobile Statistics Cards */
  .stats-grid {
    @apply grid-cols-1 sm:grid-cols-2 gap-4;
  }
  
  /* Mobile Activity Feed */
  .activity-feed {
    @apply space-y-2;
  }
  
  .activity-item {
    @apply p-3 text-sm;
  }
  
  /* Mobile Onboarding */
  .onboarding-modal {
    @apply mx-4 max-w-full;
  }
  
  /* Mobile Form Elements */
  .btn {
    @apply w-full sm:w-auto;
  }
  
  .btn-group {
    @apply flex-col sm:flex-row gap-2;
  }
  
  /* Mobile Tables */
  .responsive-table {
    @apply block overflow-x-auto whitespace-nowrap;
  }
  
  .table-mobile-card {
    @apply border rounded-lg p-4 mb-4 block;
  }
  
  /* Mobile Headers */
  .dashboard-header {
    @apply text-center sm:text-left;
  }
  
  .dashboard-header h1 {
    @apply text-xl sm:text-2xl;
  }
  
  /* Mobile Recommendations */
  .recommendations-grid {
    @apply grid-cols-1 gap-3;
  }
  
  /* Mobile RP Features */
  .rp-grid {
    @apply grid-cols-1 gap-4;
  }
  
  /* Mobile Progress Bars */
  .progress-container {
    @apply px-4;
  }
}

@media (max-width: 480px) {
  /* Extra small mobile optimizations */
  .container {
    @apply px-4;
  }
  
  .card-padding {
    @apply p-4;
  }
  
  .text-responsive {
    @apply text-sm;
  }
  
  .button-stack {
    @apply flex-col gap-2;
  }
}