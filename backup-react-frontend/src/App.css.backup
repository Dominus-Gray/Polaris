@tailwind base;
@tailwind components;
@tailwind utilities;

/* ===== POLARIS REFINED & POLISHED VISUAL SYSTEM ===== */
/* Research-based 2025 best practices: Sharp, refined, professional */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

:root {
  /* === REFINED COLOR PALETTE (Light Theme Optimized) === */
  --primary: #2563EB;           /* Material Blue - trust & professionalism */
  --primary-50: #EFF6FF;        /* Ultra light blue */
  --primary-100: #DBEAFE;       /* Light blue - hover states */
  --primary-200: #BFDBFE;       /* Medium light - borders */
  --primary-500: #2563EB;       /* Primary actions */
  --primary-600: #1D4ED8;       /* Primary hover */
  --primary-700: #1E40AF;       /* Primary active */
  
  /* === HARMONIOUS ANALOGOUS COLORS === */
  --cyan-50: #ECFEFF;           /* Light cyan */
  --cyan-100: #CFFAFE;          /* Cyan accents */
  --cyan-500: #06B6D4;          /* Cyan interactive */
  --cyan-600: #0891B2;          /* Cyan emphasis */
  
  --teal-50: #F0FDFA;           /* Light teal */
  --teal-100: #CCFBF1;          /* Teal accents */
  --teal-500: #14B8A6;          /* Teal interactive */
  
  /* === REFINED NEUTRALS (Light & Clean) === */
  --gray-25: #FCFCFD;           /* Ultra light - page background */
  --gray-50: #F9FAFB;           /* Very light - card backgrounds */
  --gray-100: #F3F4F6;          /* Light - surfaces */
  --gray-200: #E5E7EB;          /* Light medium - borders */
  --gray-300: #D1D5DB;          /* Medium - disabled states */
  --gray-400: #9CA3AF;          /* Medium dark - placeholders */
  --gray-500: #6B7280;          /* Dark - supporting text */
  --gray-600: #4B5563;          /* Darker - body text */
  --gray-700: #374151;          /* Very dark - headings */
  --gray-800: #1F2937;          /* Ultra dark - emphasis */
  
  /* === REFINED SPACING (8px baseline) === */
  --spacing-1: 0.25rem;    /* 4px */
  --spacing-2: 0.5rem;     /* 8px */
  --spacing-3: 0.75rem;    /* 12px */
  --spacing-4: 1rem;       /* 16px */
  --spacing-6: 1.5rem;     /* 24px */
  --spacing-8: 2rem;       /* 32px */
  --spacing-12: 3rem;      /* 48px */
  --spacing-16: 4rem;      /* 64px */
  --spacing-20: 5rem;      /* 80px */
  
  /* === REFINED SHADOWS === */
  --shadow-xs: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow-sm: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  
  /* === GLASSMORPHISM === */
  --glass-bg: rgba(255, 255, 255, 0.8);
  --glass-border: rgba(255, 255, 255, 0.2);
  --backdrop-blur: blur(16px);
}

/* === REFINED BASE STYLING === */
body {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
  font-size: 0.875rem;
  line-height: 1.6;
  color: var(--gray-600);
  background: var(--gray-25);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.app-shell {
  min-height: 100vh;
}

/* === PROFESSIONAL HEADER (Fixed) === */
.header {
  position: sticky;
  top: 0;
  z-index: 50;
  height: 4rem;
  background: var(--glass-bg);
  backdrop-filter: var(--backdrop-blur);
  border-bottom: 1px solid var(--gray-200);
  box-shadow: var(--shadow-sm);
}

.header-inner {
  max-width: 1200px;
  margin: 0 auto;
  height: 100%;
  padding: 0 var(--spacing-6);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.brand {
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--gray-700);
  text-decoration: none;
  letter-spacing: -0.025em;
}

/* === REFINED HERO SECTION === */
.hero {
  position: relative;
  background: linear-gradient(135deg, var(--primary-500) 0%, var(--cyan-500) 100%);
  overflow: hidden;
}

.hero-inner {
  max-width: 1200px;
  margin: 0 auto;
  padding: var(--spacing-20) var(--spacing-6);
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  position: relative;
  z-index: 2;
}

.hero-sub {
  font-size: 1.125rem;
  color: rgba(255, 255, 255, 0.9);
  margin-top: var(--spacing-4);
  max-width: 600px;
  line-height: 1.6;
}

.hero-ctas {
  display: flex;
  gap: var(--spacing-4);
  margin-top: var(--spacing-8);
  justify-content: center;
  flex-wrap: wrap;
}

/* === REFINED BUTTONS === */
.btn {
  display: inline-flex;
  align-items: center;
  gap: var(--spacing-2);
  padding: var(--spacing-3) var(--spacing-6);
  font-size: 0.875rem;
  font-weight: 500;
  border-radius: 0.5rem;
  border: 1px solid var(--gray-200);
  background: white;
  color: var(--gray-700);
  box-shadow: var(--shadow-xs);
  transition: all 0.15s ease;
  cursor: pointer;
  text-decoration: none;
}

.btn:hover {
  background: var(--gray-50);
  border-color: var(--gray-300);
  box-shadow: var(--shadow-sm);
  transform: translateY(-1px);
}

.btn-primary {
  background: var(--primary-500);
  border-color: var(--primary-500);
  color: white;
  box-shadow: 0 4px 14px 0 rgba(37, 99, 235, 0.15);
}

.btn-primary:hover {
  background: var(--primary-600);
  border-color: var(--primary-600);
  box-shadow: 0 10px 25px -3px rgba(37, 99, 235, 0.2);
  transform: translateY(-2px);
}

.btn-sm {
  padding: var(--spacing-2) var(--spacing-4);
  font-size: 0.75rem;
}

/* === REFINED FORMS === */
.input {
  width: 100%;
  padding: var(--spacing-3) var(--spacing-4);
  font-size: 0.875rem;
  color: var(--gray-700);
  background: white;
  border: 1px solid var(--gray-200);
  border-radius: 0.5rem;
  box-shadow: var(--shadow-xs);
  transition: all 0.15s ease;
}

.input:focus {
  outline: none;
  border-color: var(--primary-500);
  box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
}

.form-label {
  display: block;
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--gray-700);
  margin-bottom: var(--spacing-2);
}

/* === REFINED CARDS === */
.card {
  background: white;
  border: 1px solid var(--gray-200);
  border-radius: 1rem;
  box-shadow: var(--shadow-sm);
  transition: all 0.2s ease;
}

.card:hover {
  box-shadow: var(--shadow-md);
  transform: translateY(-1px);
}

/* === REFINED STATISTICS === */
.stat-card {
  background: white;
  border: 1px solid var(--gray-200);
  border-radius: 1rem;
  padding: var(--spacing-8);
  box-shadow: var(--shadow-sm);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.stat-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, var(--primary-500) 0%, var(--cyan-500) 100%);
}

.stat-card:hover {
  box-shadow: var(--shadow-lg);
  transform: translateY(-4px);
  border-color: var(--primary-200);
}

.stat-number {
  font-size: 2.25rem;
  font-weight: 700;
  color: var(--primary-600);
  line-height: 1;
  margin-bottom: var(--spacing-2);
}

.stat-label {
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--gray-500);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-bottom: var(--spacing-1);
}

.stat-desc {
  font-size: 0.75rem;
  color: var(--gray-400);
  line-height: 1.4;
}

/* === REFINED DASHBOARD === */
.dashboard-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: var(--spacing-6);
}

.tile {
  background: white;
  border: 1px solid var(--gray-200);
  border-radius: 1rem;
  padding: var(--spacing-6);
  box-shadow: var(--shadow-sm);
  transition: all 0.2s ease;
}

.tile:hover {
  box-shadow: var(--shadow-md);
  transform: translateY(-2px);
  border-color: var(--primary-200);
}

.tile-title {
  font-size: 0.75rem;
  font-weight: 600;
  color: var(--gray-400);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-bottom: var(--spacing-2);
  display: flex;
  align-items: center;
  gap: var(--spacing-2);
}

.tile-num {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--gray-800);
  line-height: 1;
  margin-bottom: var(--spacing-1);
}

.tile-sub {
  font-size: 0.75rem;
  color: var(--gray-500);
  font-weight: 500;
}

/* === REFINED LAYOUT === */
.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 var(--spacing-6);
}

.section {
  padding: var(--spacing-16) 0;
}

/* === REFINED UTILITIES === */
.area-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-3);
  padding: var(--spacing-3);
  border-radius: 0.5rem;
  color: var(--gray-600);
  transition: all 0.15s ease;
  cursor: pointer;
}

.area-item:hover {
  background: var(--gray-50);
  color: var(--gray-700);
}

.area-active {
  background: var(--primary-50);
  color: var(--primary-700);
  border-left: 4px solid var(--primary-500);
}

.q-card {
  background: white;
  border: 1px solid var(--gray-200);
  border-radius: 0.75rem;
  padding: var(--spacing-6);
  margin-bottom: var(--spacing-4);
  box-shadow: var(--shadow-xs);
  transition: all 0.2s ease;
}

.q-card:hover {
  box-shadow: var(--shadow-sm);
}

.q-label {
  font-weight: 500;
  color: var(--gray-700);
}

.q-actions {
  margin-top: var(--spacing-3);
  display: flex;
  align-items: center;
  gap: var(--spacing-2);
  flex-wrap: wrap;
}

.toggle {
  display: inline-flex;
  border-radius: 9999px;
  overflow: hidden;
  border: 1px solid var(--gray-200);
}

.toggle button {
  padding: var(--spacing-2) var(--spacing-4);
  font-size: 0.75rem;
  background: white;
  color: var(--gray-500);
  border: none;
  cursor: pointer;
  transition: all 0.15s ease;
}

.toggle button:hover {
  background: var(--gray-50);
}

.toggle .on {
  background: var(--primary-500);
  color: white;
}

.toggle .off {
  background: var(--gray-300);
  color: white;
}

.upload-box {
  margin-top: var(--spacing-3);
  padding: var(--spacing-3);
  border-radius: 0.5rem;
  border: 2px dashed var(--gray-200);
  background: var(--gray-50);
}

.badge {
  display: inline-flex;
  align-items: center;
  gap: var(--spacing-1);
  padding: var(--spacing-1) var(--spacing-3);
  border-radius: 9999px;
  font-size: 0.75rem;
  font-weight: 500;
  background: var(--gray-100);
  color: var(--gray-600);
}

.progress-wrap {
  width: 100%;
  background: var(--gray-200);
  height: 0.5rem;
  border-radius: 0.25rem;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background: linear-gradient(90deg, var(--primary-500) 0%, var(--cyan-500) 100%);
  transition: width 0.3s ease;
}

.grid-layout {
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--spacing-6);
  margin-top: var(--spacing-6);
}

@media (min-width: 1024px) {
  .grid-layout {
    grid-template-columns: 1fr 3fr;
  }
}

.sidebar {
  padding: var(--spacing-4);
  border-radius: 0.75rem;
  border: 1px solid var(--gray-200);
  background: white;
  box-shadow: var(--shadow-sm);
}

.main {
  padding: var(--spacing-4);
  border-radius: 0.75rem;
  border: 1px solid var(--gray-200);
  background: white;
  box-shadow: var(--shadow-sm);
}



/* === HARMONIOUS BASE STYLING === */
body { 
  background: var(--bg-app);
  color: var(--text-body);
  font-family: var(--font-body);
  font-size: var(--text-base);
  line-height: 1.6;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.app-shell { 
  min-height: 100vh;
  background: var(--gradient-light);
}

/* === HARMONIOUS HEADER SYSTEM === */
.header { 
  position: sticky;
  top: 0;
  z-index: 30;
  backdrop-filter: blur(10px);
  background: rgba(255, 255, 255, 0.95);
  border-bottom: 1px solid var(--border-subtle);
}

.header-inner { 
  max-width: 72rem;
  margin: 0 auto;
  padding: var(--space-3) var(--space-4);
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: var(--space-4);
}

.brand { 
  font-family: var(--font-display);
  font-size: var(--text-xl);
  font-weight: var(--font-semibold);
  letter-spacing: -0.025em;
  color: var(--text-heading);
}

/* === NAVIGATION SYSTEM === */
.nav-item {
  display: flex;
  align-items: center;
  gap: var(--space-2);
  padding: var(--space-2) var(--space-4);
  border-radius: var(--radius-lg);
  font-size: var(--text-sm);
  font-weight: var(--font-medium);
  color: var(--text-muted);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  text-decoration: none;
}

.nav-item:hover {
  background: var(--bg-interactive);
  color: var(--text-body);
  transform: translateY(-1px);
}

.nav-item.active {
  background: var(--gradient-primary);
  color: var(--text-on-primary);
  box-shadow: var(--shadow-harmonious);
}

/* === USER MENU SYSTEM === */
.user-avatar {
  width: 2rem;
  height: 2rem;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--text-sm);
  font-weight: var(--font-semibold);
  background: var(--gradient-primary);
  color: var(--text-on-primary);
  box-shadow: var(--shadow-harmonious);
}

.user-menu-dropdown {
  position: absolute;
  right: 0;
  margin-top: var(--space-2);
  width: 14rem;
  background: white;
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-elevated);
  border: 1px solid var(--border-subtle);
  padding: var(--space-2);
  z-index: 50;
}

.menu-item {
  display: flex;
  align-items: center;
  gap: var(--space-3);
  padding: var(--space-3) var(--space-4);
  font-size: var(--text-sm);
  color: var(--text-body);
  border-radius: var(--radius-lg);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  width: 100%;
  text-align: left;
  border: none;
  background: none;
  cursor: pointer;
}

.menu-item:hover {
  background: var(--bg-interactive);
  color: var(--text-heading);
}

/* Progress bars with strict contrast rules */
.progress-wrap { 
  @apply w-full h-2 rounded overflow-hidden;
  background: var(--background-interactive);
}
.progress-bar { 
  @apply h-full;
  background: var(--primary-main);
}

/* Layout components with safe contrast */
.container { @apply max-w-6xl mx-auto px-4; }
.grid-layout { @apply grid grid-cols-1 lg:grid-cols-12 gap-6 mt-6; }
.sidebar { 
  @apply lg:col-span-3 p-4 rounded-lg border shadow-sm; 
  background: var(--background-card);
  border-color: var(--border-subtle);
  color: var(--text-body);
}
.main { 
  @apply lg:col-span-9 p-4 rounded-lg border shadow-sm;
  background: var(--background-card);
  border-color: var(--border-subtle);
  color: var(--text-body);
}

/* Area components - safe contrast only */
.area-item { 
  @apply flex items-center gap-3 p-2 rounded cursor-pointer transition-colors;
  color: var(--text-body);
}
.area-item:hover {
  background: var(--background-interactive);
  color: var(--text-heading);
}
.area-active { 
  @apply border-l-4;
  background: var(--background-interactive);
  color: var(--text-heading);
  border-left-color: var(--primary-main);
}

/* Question cards with strict contrast rules */
.q-card { 
  @apply p-4 border rounded-lg mb-4 shadow-sm transition hover:shadow-md;
  background: var(--background-card);
  border-color: var(--border-subtle);
  color: var(--text-body);
}
.q-label { 
  @apply font-medium;
  color: var(--text-heading);
}
.q-actions { @apply mt-3 flex items-center gap-2 flex-wrap; }

/* Toggle components with safe contrast */
.toggle { 
  @apply inline-flex rounded-full overflow-hidden border;
  border-color: var(--border-standard);
}
.toggle button { 
  @apply px-3 py-1 text-sm transition;
  color: var(--text-caption);
  background: var(--background-page);
}
.toggle button:hover {
  background: var(--background-interactive);
  color: var(--text-body);
}
.toggle .on { 
  background: var(--primary-main);
  color: var(--text-on-primary);
}
.toggle .off { 
  background: var(--secondary-main);
  color: var(--text-heading);
}

.upload-box { 
  @apply mt-3 p-3 rounded border;
  background: var(--background-section);
  border-color: var(--border-subtle);
  color: var(--text-body);
}

/* === HARMONIOUS BUTTON SYSTEM === */
.btn { 
  display: inline-flex;
  align-items: center;
  gap: var(--space-2);
  padding: var(--space-3) var(--space-6);
  border-radius: var(--radius-lg);
  font-size: var(--text-sm);
  font-weight: var(--font-medium);
  border: 1px solid var(--border-standard);
  background: var(--bg-card);
  color: var(--text-body);
  box-shadow: var(--shadow-harmonious);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  font-family: var(--font-body);
}

.btn:hover { 
  transform: translateY(-1px);
  background: var(--bg-interactive);
  border-color: var(--border-emphasis);
  color: var(--text-heading);
  box-shadow: var(--shadow-elevated);
}

.btn-primary { 
  border: none;
  background: var(--btn-primary-bg);
  color: var(--btn-primary-text);
  box-shadow: var(--shadow-elevated);
}

.btn-primary:hover {
  background: var(--btn-primary-hover);
  box-shadow: var(--shadow-dramatic);
  transform: translateY(-2px);
}

.btn-secondary {
  border: none;
  background: var(--btn-secondary-bg);
  color: var(--btn-secondary-text);
}

.btn-secondary:hover {
  background: var(--btn-secondary-hover);
}

.btn-tertiary {
  border: none;
  background: var(--btn-tertiary-bg);
  color: var(--btn-tertiary-text);
}

.btn-tertiary:hover {
  background: var(--btn-tertiary-hover);
}

/* === HARMONIOUS CARDS === */
.stat-card, .role-card, .card {
  background: var(--gradient-card);
  border: 1px solid var(--border-subtle);
  border-radius: var(--radius-2xl);
  padding: var(--space-8);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: var(--shadow-harmonious);
  position: relative;
  overflow: hidden;
}

.stat-card:hover, .role-card:hover, .card:hover {
  border-color: var(--border-emphasis);
  box-shadow: var(--shadow-elevated);
  transform: translateY(-4px);
}

.stat-card::before, .role-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: var(--gradient-primary);
}

.role-card::before {
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.role-card:hover::before {
  transform: scaleX(1);
}

.stat-number {
  font-family: var(--font-display);
  font-size: var(--text-4xl);
  font-weight: var(--font-extrabold);
  color: var(--primary-blue);
  margin-bottom: var(--space-2);
  line-height: 1;
}

/* === HARMONIOUS FORMS === */
.input, .form-input {
  width: 100%;
  padding: var(--space-3) var(--space-4);
  border: 2px solid var(--border-standard);
  border-radius: var(--radius-lg);
  font-size: var(--text-base);
  color: var(--text-body);
  background: var(--bg-card);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  font-family: var(--font-body);
}

.input:focus, .form-input:focus {
  outline: none;
  border-color: var(--primary-blue);
  box-shadow: 0 0 0 3px rgba(61, 90, 128, 0.1);
  background: white;
}

/* === HARMONIOUS ALERTS === */
.state-success {
  background: var(--accent-success-bg);
  border: 1px solid var(--accent-success);
  border-radius: var(--radius-lg);
  padding: var(--space-4);
  color: var(--accent-success);
}

.state-warning {
  background: var(--accent-warning-bg);
  border: 1px solid var(--accent-warning);
  border-radius: var(--radius-lg);
  padding: var(--space-4);
  color: var(--accent-warning);
}

.state-error {
  background: var(--accent-danger-bg);
  border: 1px solid var(--accent-danger);
  border-radius: var(--radius-lg);
  padding: var(--space-4);
  color: var(--accent-danger);
}

/* === HARMONIOUS OVERRIDES === */
/* Text color overrides - Harmonious System */
h1, h2, h3, h4, h5, h6 {
  color: var(--text-heading);
  font-family: var(--font-display);
}

p {
  color: var(--text-body);
}

/* Tailwind Overrides - Force Harmony */
.text-slate-900, .text-slate-800, .text-slate-700 {
  color: var(--text-heading) !important;
}

.text-slate-600 {
  color: var(--text-body) !important;
}

.text-slate-500, .text-slate-400 {
  color: var(--text-muted) !important;
}

.bg-slate-50 {
  background: var(--bg-app) !important;
}

.bg-slate-100 {
  background: var(--bg-surface) !important;
}

.bg-slate-200 {
  background: var(--bg-interactive) !important;
}

/* Dashboard specific harmonious colors */
.bg-blue-600, .bg-indigo-600 {
  background: var(--primary-blue) !important;
}

.bg-blue-500 {
  background: var(--primary-light) !important;
}

.bg-blue-400 {
  background: var(--analogous-teal-light) !important;
}

.bg-blue-300 {
  background: var(--analogous-teal) !important;
}

.bg-purple-600, .bg-purple-500 {
  background: var(--analogous-indigo) !important;
}

.bg-purple-400 {
  background: var(--analogous-indigo-light) !important;
}

/* Remove all harsh gradients */
.bg-gradient-to-r {
  background: var(--gradient-primary) !important;
}

/* Success/Error colors - harmonized */
.bg-green-600, .bg-green-500 {
  background: var(--accent-success) !important;
}

.bg-red-600, .bg-red-500 {
  background: var(--accent-danger) !important;
}

.bg-yellow-600, .bg-amber-600 {
  background: var(--accent-warning) !important;
}

/* Ensure all borders are visible */
.border, .border-slate-200, .border-slate-300 {
  border-color: var(--border-subtle) !important;
}

/* Ensure all cards have proper background */
.bg-white {
  background: white !important;
}

.form-error {
  @apply text-sm mt-1;
  color: var(--polaris-accent-danger);
}

/* State classes with gentle colors */
.state-success {
  @apply p-4 rounded-lg border;
  background: var(--polaris-accent-success-light);
  border-color: var(--polaris-accent-success);
  color: var(--text-primary);
}

.state-error {
  @apply p-4 rounded-lg border;
  background: var(--polaris-accent-danger-light);
  border-color: var(--polaris-accent-danger);
  color: var(--text-primary);
}

.state-warning {
  @apply p-4 rounded-lg border;
  background: var(--polaris-accent-warning-light);
  border-color: var(--polaris-accent-warning);
  color: var(--text-primary);
}

.state-info {
  @apply p-4 rounded-lg border;
  background: var(--polaris-blue-100);
  border-color: var(--polaris-blue-300);
  color: var(--text-primary);
}

/* Badge System */
.badge { 
  @apply inline-flex items-center gap-1 px-3 py-1 rounded-full text-xs font-medium;
  background: var(--polaris-blue-100);
  color: var(--polaris-blue-700);
}

.badge-success {
  background: var(--polaris-accent-success-light);
  color: var(--polaris-accent-success);
}

.badge-error {
  background: var(--polaris-accent-danger-light);
  color: var(--polaris-accent-danger);
}

.badge-warning {
  background: var(--polaris-accent-warning-light);
  color: var(--polaris-accent-warning);
}

.badge-primary {
  background: var(--polaris-blue-100);
  color: var(--polaris-blue-700);
}

/* Card System */
.card {
  @apply p-6 bg-white rounded-lg border shadow-sm;
  border-color: var(--border-color);
}

.card-header {
  @apply border-b pb-4 mb-4;
  border-color: var(--border-color);
}

.card-title {
  @apply text-lg font-semibold;
  color: var(--text-primary);
}

.card-subtitle {
  @apply text-sm mt-1;
  color: var(--text-secondary);
}

/* Statistics Cards with blue harmony */
.stat-card {
  @apply bg-white rounded-lg border p-6 transition-all duration-200 hover:shadow-md;
  border-color: var(--border-color);
}

.stat-card:hover {
  border-color: var(--polaris-blue-300);
  box-shadow: 0 4px 6px rgba(79, 136, 255, 0.1);
}

.stat-number {
  @apply text-3xl font-bold mb-1;
  color: var(--polaris-blue-600);
}

.stat-label {
  @apply text-sm font-medium uppercase tracking-wide;
  color: var(--text-secondary);
}

.stat-desc {
  @apply text-xs mt-1;
  color: var(--text-muted);
}

