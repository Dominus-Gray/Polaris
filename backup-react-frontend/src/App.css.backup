/* ===== PREMIUM COMPONENT SYSTEM ===== */

/* Premium Statistics Cards */
.stat-card {
  background: white;
  border: 1px solid var(--border-subtle);
  border-radius: var(--radius-2xl);
  padding: var(--space-8);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.stat-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, var(--polaris-300) 0%, var(--polaris-500) 50%, var(--polaris-300) 100%);
}

.stat-card:hover {
  border-color: var(--border-emphasis);
  box-shadow: var(--shadow-lg);
  transform: translateY(-4px);
}

.stat-number {
  font-family: var(--font-display);
  font-size: var(--text-4xl);
  font-weight: var(--font-extrabold);
  color: var(--primary-main);
  margin-bottom: var(--space-2);
  line-height: 1;
}

.stat-label {
  font-size: var(--text-sm);
  font-weight: var(--font-semibold);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--text-caption);
  margin-bottom: var(--space-1);
}

.stat-desc {
  font-size: var(--text-xs);
  color: var(--text-muted);
  line-height: 1.4;
}

/* Premium Role Selection Cards */
.role-card {
  background: white;
  border: 2px solid var(--border-subtle);
  border-radius: var(--radius-2xl);
  padding: var(--space-8);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  position: relative;
  overflow: hidden;
}

.role-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: var(--primary-main);
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.role-card:hover {
  border-color: var(--primary-main);
  box-shadow: var(--shadow-xl);
  transform: translateY(-6px);
}

.role-card:hover::before {
  transform: scaleX(1);
}

.role-card-icon {
  font-size: 3rem;
  margin-bottom: var(--space-4);
  display: block;
  text-align: center;
}

.role-card-title {
  font-family: var(--font-display);
  font-size: var(--text-xl);
  font-weight: var(--font-semibold);
  color: var(--text-heading);
  margin-bottom: var(--space-3);
  text-align: center;
}

.role-card-description {
  font-size: var(--text-base);
  color: var(--text-body);
  line-height: 1.6;
  margin-bottom: var(--space-4);
  text-align: center;
}

.role-card-features {
  list-style: none;
  padding: 0;
  margin: 0;
}

.role-card-features li {
  display: flex;
  align-items: center;
  gap: var(--space-2);
  font-size: var(--text-sm);
  color: var(--text-caption);
  margin-bottom: var(--space-2);
}

.role-card-features li::before {
  content: '✓';
  color: var(--success);
  font-weight: var(--font-bold);
}

/* ===== PREMIUM SECTION SYSTEM ===== */

.premium-section {
  padding: var(--space-20) var(--space-4);
  background: var(--background-section);
}

.premium-section-container {
  max-width: 80rem;
  margin: 0 auto;
  background: white;
  border-radius: var(--radius-3xl);
  padding: var(--space-12);
  box-shadow: var(--shadow-xl);
  border: 1px solid var(--border-subtle);
}

.premium-section-header {
  text-align: center;
  margin-bottom: var(--space-12);
}

.premium-section-title {
  font-family: var(--font-display);
  font-size: var(--text-3xl);
  font-weight: var(--font-bold);
  color: var(--text-heading);
  margin-bottom: var(--space-4);
  letter-spacing: -0.025em;
}

.premium-section-subtitle {
  font-size: var(--text-lg);
  color: var(--text-body);
  line-height: 1.6;
  max-width: 42rem;
  margin: 0 auto;
}

.role-cards-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--space-8);
  margin-bottom: var(--space-12);
}

@media (min-width: 768px) {
  .role-cards-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (min-width: 1024px) {
  .role-cards-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}

.role-card-requirements {
  background: var(--warning-bg);
  border: 1px solid var(--warning);
  border-radius: var(--radius-lg);
  padding: var(--space-3);
  margin-bottom: var(--space-4);
  text-align: center;
}

.requirements-label {
  display: block;
  font-size: var(--text-xs);
  font-weight: var(--font-semibold);
  color: var(--warning);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-bottom: var(--space-1);
}

.requirements-text {
  font-size: var(--text-xs);
  color: var(--text-caption);
  line-height: 1.4;
}

.role-card-cta {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-2);
  margin-top: var(--space-6);
  padding: var(--space-3);
  background: var(--background-interactive);
  border-radius: var(--radius-lg);
  font-size: var(--text-sm);
  font-weight: var(--font-medium);
  color: var(--text-heading);
  transition: all 0.2s ease;
}

.role-card:hover .role-card-cta {
  background: var(--primary-main);
  color: white;
}

.cta-arrow {
  transition: transform 0.2s ease;
}

.role-card:hover .cta-arrow {
  transform: translateX(2px);
}

.premium-signin-link {
  text-align: center;
}

.signin-link {
  display: inline-flex;
  align-items: center;
  gap: var(--space-2);
  padding: var(--space-3) var(--space-6);
  color: var(--primary-main);
  font-size: var(--text-base);
  font-weight: var(--font-medium);
  text-decoration: none;
  border-radius: var(--radius-lg);
  transition: all 0.2s ease;
}

.signin-link:hover {
  background: var(--background-interactive);
  color: var(--primary-hover);
  text-decoration: none;
}

.signin-icon {
  font-size: 1.1em;
}

